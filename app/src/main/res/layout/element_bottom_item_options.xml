<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:baselineAligned="false"
    app:behavior_hideable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/ar_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:background="@drawable/ic_culture"/>


        <TextView
            android:id="@+id/ar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/text_title"
            tools:text="Santa MarÃ­a del Naranco" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/events_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ar_how_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_directions"
                android:drawableStart="@drawable/ic_directions"
                android:text="@string/menu_ar_how_to_get"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sites_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ar_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_item_about"
                android:drawableStart="@drawable/ic_item_about"
                android:text="@string/menu_ar_open_detail"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>