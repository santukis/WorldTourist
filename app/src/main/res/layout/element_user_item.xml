<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/site_image_size"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/site_image_size"
        android:layout_height="@dimen/site_image_size"
        android:layout_alignParentStart="true"
        tools:src="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_toEndOf="@+id/item_image"
        android:layout_toStartOf="@+id/item_icon"
        android:layout_alignTop="@+id/item_icon"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="@dimen/text_header"
        android:textStyle="bold"
        tools:text="La Catedral de Oviedo" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_icon"
        android:layout_margin="@dimen/text_margin"
        android:layout_toEndOf="@+id/item_image"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/text_margin"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat" />

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        tools:src="@drawable/ic_culture" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginTop="@dimen/text_margin"
        android:background="@color/colorTransparent" />

</RelativeLayout>